{
  "name": "@signmax/config",
  "version": "0.0.7",
  "publishConfig": {
    "access": "public"
  },
  "description": "Reasonable ESLint, Prettier, and TypeScript configs.",
  "license": "MIT",
  "author": "Signmax AB <team@signomatic.ee> (https://skyltmax.se/)",
  "homepage": "https://github.com/skyltmax/config#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/skyltmax/config.git"
  },
  "bugs": {
    "url": "https://github.com/skyltmax/config/issues"
  },
  "keywords": [
    "config",
    "eslint",
    "prettier",
    "typescript",
    "signmax",
    "skyltmax"
  ],
  "main": "index.js",
  "type": "module",
  "exports": {
    ".": "./index.js",
    "./prettier": "./prettier.js",
    "./typescript": "./typescript.json",
    "./reset.d.ts": "./reset.d.ts",
    "./eslint": "./eslint.js"
  },
  "files": [
    "*.js",
    "*.json",
    "*.d.ts",
    "*.yml",
    "lib/**",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "format": "prettier . --write",
    "lint": "eslint .",
    "typecheck": "tsc",
    "validate": "run-p -l format lint typecheck",
    "bump": "npx npm-check-updates --dep peer --target latest -i"
  },
  "peerDependencies": {
    "@eslint/js": "9.39.1",
    "@total-typescript/ts-reset": "0.6.1",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "@typescript-eslint/utils": "8.46.3",
    "@vitest/eslint-plugin": "1.4.1",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-jest-dom": "5.5.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-testing-library": "7.13.3",
    "globals": "16.5.0",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.7.1",
    "tslib": "2.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.46.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.3.0"
  },
  "prettier": "./prettier.js"
}
